<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ayotest.ui.DisplayWeatherActivity">

    <TextView
        android:id="@+id/tv_current_temp_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        style="@style/AppTextStyle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_current_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTextStyle"
        app:layout_constraintLeft_toRightOf="@+id/tv_current_temp_key"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_current_temp_key"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_current_temp_key"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_min_temp_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_temp"
        style="@style/AppTextStyle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_temp_key"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_current_temp_key" />

    <TextView
        android:id="@+id/tv_min_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTextStyle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_min_temp_key"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_min_temp_key"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_min_temp_key" />

    <TextView
        android:id="@+id/tv_max_temp_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_temp"
        style="@style/AppTextStyle"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_min_temp_key"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_min_temp_key" />

    <TextView
        android:id="@+id/tv_max_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTextStyle"
        app:layout_constraintTop_toTopOf="@+id/tv_max_temp_key"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_max_temp_key"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.125"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_min_temp_value" />

    <TextView
        android:id="@+id/tv_humidity_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        style="@style/AppTextStyle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_max_temp_key"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_max_temp_key" />

    <TextView
        android:id="@+id/tv_humidity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTextStyle"
        app:layout_constraintTop_toTopOf="@+id/tv_humidity_key"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_humidity_key"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_max_temp_value" />


</android.support.constraint.ConstraintLayout>
